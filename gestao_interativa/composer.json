{
    "name": "sistema-frotas/gestao-interativa",
    "description": "Módulo de gestão interativa para o Sistema de Gestão de Frotas",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GestaoInterativa\\": "src/"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.4"
    },
    "autoload-dev": {
        "psr-4": {
            "GestaoInterativa\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs",
        "fix-style": "phpcbf",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 